{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>

    <ul>
        {% for user in users %}
            <li>{{ user.name }}</li>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_detail', {'id': user.id}) }}">Liste des utilisateurs</a>
            {% endif %}

        {% endfor %}
    </ul>
{% endblock %}